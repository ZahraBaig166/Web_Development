<link rel="stylesheet" href="style3.css"> 
<link rel="stylesheet" href="/edit.css">
<h2 class="Etitle">Edit Product</h2>
<form id="uploadForm" class="Eform" action="/products/<%= product._id %>/edit" method="post" enctype="multipart/form-data">
    <label class="Elabel">Name:</label> <input type="text" class="Einput" name="name" value="<%= product.name %>" required><br>
    <label class="Elabel">Category:</label> <input type="text" class="Einput" name="category" value="<%= product.category %>" required><br>
    <label class="Elabel">Type:</label> <input type="text" class="Einput" name="type" value="<%= product.type %>" required><br>
    <label class="Elabel">Price:</label> <input type="number" class="Einput" name="price" value="<%= product.price %>" required><br>
    <label class="Elabel">Description:</label> <input type="text" class="Einput" name="description" value="<%= product.description %>" required><br>
    <label class="Elabel">Image:</label> <input type="file" class="Einput" name="image" accept="image/*"><br>
    <input type="submit" class="Ebutton" value="Update Product">
</form>



